<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.scausw215.train.mapper.StationInfoMapper">

    <resultMap id="BaseResultMap" type="com.scausw215.train.entity.DO.StationInfoDO">
        <id property="stationId" column="station_id" jdbcType="BIGINT"/>
        <result property="stationName" column="station_name" jdbcType="VARCHAR"/>
        <result property="stationCity" column="station_city" jdbcType="VARCHAR"/>
        <result property="stationProvince" column="station_province" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="insertStation" parameterType="com.scausw215.train.entity.DO.StationInfoDO">
        INSERT INTO station_info (station_name, station_city, station_province)
            VALUE (#{stationName}, #{stationCity}, #{stationProvince})
    </insert>
    <update id="updateStation" parameterType="com.scausw215.train.entity.DO.StationInfoDO">
        update station_info
        set station_name=#{stationName},
            station_city=#{stationCity},
            station_province=#{stationProvince}
        where station_id = #{stationId}
    </update>


    <delete id="deleteStationInfoById" parameterType="java.lang.Long">
        DELETE
        FROM station_info
        WHERE station_id = #{stationId}


    </delete>
    <select id="selectStationById" resultType="com.scausw215.train.entity.DO.StationInfoDO"
            parameterType="java.lang.Long">
        SELECT *
        FROM station_info
        WHERE station_id = #{stationId}

    </select>
    <select id="selectStationByName" resultType="com.scausw215.train.entity.DO.StationInfoDO"
            parameterType="java.lang.String">
        SELECT *
        FROM station_info
        WHERE station_name = #{stationName}
    </select>
    <select id="getIdByName" resultType="java.lang.Long" parameterType="java.lang.String">
        select station_id
        from station_info
        where station_name = #{name}
    </select>
    <select id="getAll" resultType="com.scausw215.train.entity.DO.StationInfoDO">
        select *
        from station_info
    </select>
    <select id="getByCity" resultType="com.scausw215.train.entity.DO.StationInfoDO"
            parameterType="java.lang.String">
        select *
        from station_info
        where station_city = #{city}
    </select>
    <select id="getByProvince" resultType="com.scausw215.train.entity.DO.StationInfoDO"
            parameterType="java.lang.String">
        select *
        from station_info
        where station_province = #{province}
    </select>


</mapper>
